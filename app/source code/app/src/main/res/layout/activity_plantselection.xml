<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/blue"
    android:layout_height="wrap_content">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:id="@+id/overall"

    android:layout_height="match_parent"
    tools:context="com.example.rajiv.thala.proportionselect">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="30dp"
    android:layout_marginBottom="20dp"
    android:text="Lettuce:"
    style="@style/selectseed"
    android:textAllCaps="true"
    android:fontFamily="sans-serif-condensed"
    android:textSize="20dp"

    />
<SeekBar
    android:layout_width="250dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:progressBackgroundTint="#f9fc67"
    android:progressTint="#ff0000"
    android:thumbTint="#000000"
    android:layout_marginTop="60dp"
    android:layout_height="wrap_content"

    android:id="@+id/percentbar1"
    android:max="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/percentdisp1"
        style="@style/selectseed"
        android:text="xxxxx"
        android:layout_toRightOf="@id/percentbar1"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/percentbar1"
        android:text="Pea:"
        style="@style/selectseed"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp"

        />
    <SeekBar
        android:layout_width="250dp"
        android:layout_marginLeft="30dp"
        android:progressBackgroundTint="#f9fc67"
        android:progressTint="#ff0000"
        android:thumbTint="#000000"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/percentbar1"
        android:id="@+id/percentbar2"
        android:max="10"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        style="@style/selectseed"
        android:id="@+id/percentdisp2"
        android:layout_below="@id/percentdisp1"
        android:layout_toRightOf="@id/percentbar2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/percentbar2"
        android:text="Spinach:"
        style="@style/selectseed"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp"

        />
    <SeekBar
        android:layout_width="250dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:progressBackgroundTint="#f9fc67"
        android:progressTint="#ff0000"
        android:thumbTint="#000000"
        android:layout_height="wrap_content"
        android:layout_below="@id/percentbar2"
        android:id="@+id/percentbar3"
        android:max="10"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/selectseed"
        android:layout_marginTop="50dp"
        android:id="@+id/percentdisp3"
        android:layout_below="@id/percentdisp2"
        android:layout_toRightOf="@id/percentbar3"
        />
    <SeekBar
        android:layout_width="250dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"
        android:progressBackgroundTint="#f9fc67"
        android:progressTint="#ff0000"
        android:thumbTint="#000000"
        android:layout_below="@id/percentbar3"
        android:id="@+id/percentbar4"
        android:max="10"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:text="Corn:"
        style="@style/selectseed"
        android:layout_below="@id/percentbar3"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@id/percentdisp3"
        android:layout_toRightOf="@id/percentbar4"
        style="@style/selectseed"
        android:id="@+id/percentdisp4"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/percentdisp4"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:id="@+id/yield"
        android:layout_centerHorizontal="true"
        style="@style/selectseed"
        android:text="cdcddcd"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yield"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:id="@+id/profit"
        android:layout_centerHorizontal="true"
        style="@style/selectseed"
        android:text="cdcddcd"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profit"
        android:id="@+id/indi"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:text="Total field percentage selected"/>
    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/overallfill"
        android:max="10"
        android:progressTint="#ff0000"
        android:progressBackgroundTint="#f9fc67"
        android:layout_below="@id/indi"

        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

    <Button

        android:id="@+id/angry_btn"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/overallfill"
        android:layout_marginLeft="10dp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/startplantbutton"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"

        android:text="Start planting!"
        android:onClick="startbutton"/>
</RelativeLayout>
</ScrollView>