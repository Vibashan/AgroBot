<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:background="#000"
    android:layout_width="match_parent">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
         android:id="@+id/overall"

         android:layout_height="match_parent"
        tools:context="com.example.rajiv.thala.remainstats"
        android:layout_width="match_parent">
     <android.support.v7.widget.CardView
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:id="@+id/wedicidecard"

        >
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_height="wrap_content"
        android:id="@+id/wedicideview"
        android:layout_marginLeft="30dp"
        android:textColor="#000"
        android:textSize="30dp"
        android:text="Wedicide Left"/>
    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="160dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="120dp"
        android:id="@+id/wedicideleft"
        android:progressDrawable="@drawable/circularprogress"
        android:background="@drawable/circleshape"

        android:max="100"

        android:layout_below="@id/wedicideview"
        android:layout_marginTop="70dp"
        android:layout_height="180dp"
        />
         <Button
             android:id="@+id/wedibuy"

             android:text="Buy"

             android:layout_marginTop="275dp"
             android:layout_marginLeft="120dp"
             android:textColor="#CEFF5C"
             android:textSize="30sp"
             android:layout_marginBottom="20dp"
             android:layout_below="@id/wedicideleft"
             android:layout_width="130dp"
             android:layout_height="50dp"
             android:background="@drawable/buybutton"
             android:shadowColor="#000"
             android:shadowDx="0"
             android:onClick="buyweedicide"
             android:shadowDy="0"
             android:shadowRadius="5"

             />
     </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/pesticidecard"
            android:layout_below="@id/wedicidecard"
            android:layout_marginTop="5dp"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wedicidecard"
            android:id="@+id/pesticideview"
            android:textColor="#000"
            android:fontFamily="sans-serif-condensed"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:text="Pesticide Left"/>
        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="160dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="120dp"
            android:id="@+id/pesticideleft"
            android:layout_below="@id/pesticideview"
            android:progressDrawable="@drawable/circularprogress"
            android:background="@drawable/circleshape"
            android:layout_marginTop="70dp"
            android:layout_height="180dp" />
            <Button
                android:id="@+id/pestibuy"
                android:onClick="buypesticide"
                android:text="Buy"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_marginTop="275dp"
                android:layout_marginLeft="140dp"
                android:textColor="#CEFF5C"
                android:textSize="30sp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/wedicideleft"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:background="@drawable/buybutton"
                android:shadowColor="#96A88B"
                android:shadowDx="0"/>
        </android.support.v7.widget.CardView>
       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/pesticidecard"
           android:id="@+id/p1card"
           android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pesticidecard"
            android:id="@+id/p1text"
            android:textColor="#000"
            android:fontFamily="sans-serif-condensed"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:text="Lettuce seeds:"/>
        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="120dp"
            android:progressDrawable="@drawable/circularprogress"
            android:background="@drawable/circleshape"
            android:layout_below="@id/p1text"
            android:id="@+id/p1progress"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="70dp"
            android:layout_height="180dp" />
           <Button
               android:id="@+id/p1buy"
               android:onClick="buyp1"
               android:text="Buy"
               android:layout_marginTop="275dp"
               android:layout_marginLeft="130dp"
               android:textColor="#CEFF5C"
               android:textSize="30sp"
               android:layout_marginBottom="20dp"
               android:layout_below="@id/p1progress"
               android:layout_width="130dp"
               android:layout_height="50dp"

               android:background="@drawable/buybutton"
               android:shadowColor="#96A88B"
               android:shadowDx="0"
               android:shadowDy="0"
               android:shadowRadius="5"

               />
       </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/p1card"
            android:id="@+id/p2card">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/p1card"
            android:id="@+id/p2text"
            android:textColor="#000"
            android:fontFamily="sans-serif-condensed"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:text="Pea:"/>
        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="10dp"
            android:progressDrawable="@drawable/circularprogress"
            android:background="@drawable/circleshape"
            android:layout_below="@id/p2text"
            android:id="@+id/p2progress"
            android:layout_marginTop="70dp"
            android:layout_height="180dp" />
            <Button
                android:id="@+id/p2buy"
                android:onClick="buyp2"
                android:text="Buy"
                android:textColor="#CEFF5C"
                android:textSize="30sp"
                android:layout_marginTop="275dp"
                android:layout_marginLeft="140dp"
                android:layout_below="@id/p2progress"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/buybutton"
                android:shadowColor="#96A88B"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"

                />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/p3card"
            android:layout_marginTop="5dp"
            android:layout_below="@id/p2card">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/p3card"
            android:id="@+id/p3text"
            android:textColor="#000"
            android:fontFamily="sans-serif-condensed"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:text="Spinach:"/>
        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="10dp"
            android:progressDrawable="@drawable/circularprogress"
            android:background="@drawable/circleshape"
            android:layout_below="@id/p3text"
            android:id="@+id/p3progress"
            android:layout_marginTop="70dp"
            android:layout_height="180dp" />

            <Button
                android:id="@+id/p3buy"
                android:onClick="buyp3"

                android:text="Buy"
                android:layout_marginBottom="20dp"
                android:textColor="#CEFF5C"
                android:textSize="30sp"
                android:layout_below="@id/p3progress"

                android:layout_marginTop="275dp"
                android:layout_marginLeft="140dp"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:background="@drawable/buybutton"
                android:shadowColor="#96A88B"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"

                />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/p4card"
            android:layout_below="@id/p3card">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/p3card"
            android:id="@+id/p4text"
            android:textColor="#000"
            android:fontFamily="sans-serif-condensed"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:text="Corn:"/>
        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="120dp"

            android:layout_marginBottom="40dp"
            android:progressDrawable="@drawable/circularprogress"
            android:background="@drawable/circleshape"
            android:layout_below="@id/p4text"
            android:id="@+id/p4progress"
            android:layout_marginTop="70dp"
            android:layout_height="180dp" />

            <Button
                android:id="@+id/p4buy"
                android:onClick="buyp4"

                android:text="Buy"
                android:layout_marginBottom="20dp"
                android:textColor="#CEFF5C"
                android:textSize="30sp"
                android:layout_below="@id/p4progress"
                android:layout_marginTop="275dp"
                android:layout_marginLeft="140dp"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:background="@drawable/buybutton"
                android:shadowColor="#96A88B"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"



                />

        </android.support.v7.widget.CardView>


    </RelativeLayout>

</ScrollView>
